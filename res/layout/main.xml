<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:aw="http://schemas.android.com/apk/res/com.androidworks.screeninfo"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/whole"
	android:id="@+id/frame">

	<RelativeLayout
		android:orientation="vertical"
		android:layout_height="wrap_content"
		android:paddingTop="120dp"
		android:layout_width="fill_parent"
		android:paddingLeft="30dp">
		<TextView
			android:layout_height="wrap_content"
			android:id="@+id/sizelabel"
			android:text="Size:"
			android:layout_width="wrap_content"
			android:layout_alignRight="@+id/aspectlabel" />
		<TextView
			android:id="@+id/size"
			android:layout_height="wrap_content"
			android:text="@string/size"
			android:layout_alignLeft="@+id/aspect"
			android:layout_width="100dp" />
		<TextView
			android:layout_height="wrap_content"
			android:id="@+id/densitylabel"
			android:layout_width="wrap_content"
			android:layout_below="@id/sizelabel"
			android:text="Density:"
			android:layout_alignRight="@+id/aspectlabel" />
		<TextView
			android:id="@+id/density"
			android:layout_height="wrap_content"
			android:layout_alignTop="@+id/densitylabel"
			android:layout_alignLeft="@+id/aspect"
			android:text="@string/density"
			android:layout_width="100dp" />
		<TextView
			android:layout_height="wrap_content"
			android:id="@+id/orientationlabel"
			android:text="Orientation:"
			android:layout_width="wrap_content"
			android:layout_below="@id/densitylabel"
			android:layout_alignRight="@+id/aspectlabel" />
		<TextView
			android:id="@+id/orientation"
			android:layout_height="wrap_content"
			android:layout_alignTop="@+id/orientationlabel"
			android:layout_alignLeft="@+id/aspect"
			android:text="@string/orientation"
			android:layout_width="100dp" />
		<TextView
			android:layout_height="wrap_content"
			android:id="@+id/aspectlabel"
			android:layout_width="wrap_content"
			android:layout_below="@id/orientationlabel"
			android:text="Aspect Ratio:" />
		<TextView
			android:id="@+id/aspect"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/aspectlabel"
			android:layout_alignTop="@+id/aspectlabel"
			android:layout_marginLeft="10dp"
			android:text="@string/aspect"
			android:layout_width="100dp" />

	</RelativeLayout>
	<ImageView
		android:id="@+id/imageView1"
		android:src="@drawable/square"
		android:scaleType="fitXY"
		android:layout_height="100dp"
		android:layout_width="100dp"></ImageView>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:id="@+id/width"/>
	<com.androidworks.screeninfo.VerticalLabelView
		aw:text="TextView"
		aw:textColor="#fff"
		aw:textSize="14sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="right|center_vertical"
		android:id="@+id/height"/>
</FrameLayout>